<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="1">

    <ImageView
        android:id="@+id/new_detail_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

    <LinearLayout
        android:id="@+id/new_detail_container"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_below="@+id/new_detail_how_many"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6">

                <TextView
                    android:id="@+id/new_detail_how_many"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How many?"
                    android:paddingLeft="16dp"/>

                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/new_detail_animals_taked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2/3"
                    android:paddingRight="16dp"/>

                <SeekBar
                    android:id="@id/new_detail_hm_seekbar"
                    android:layout_below="@+id/new_detail_how_many"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>

            </RelativeLayout>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/take_me"
                android:id="@+id/new_detail_take_me"
                android:layout_weight="0.4"
                android:layout_marginRight="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/Animal"
                android:id="@+id/textView2"
                android:layout_weight="1.2"
                android:gravity="left|center_vertical"
                android:paddingLeft="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Dog"
                android:id="@+id/new_detail_animal"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/location"
                android:id="@+id/new_detail_show_location"
                android:layout_weight="1"
                android:layout_marginRight="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/Breed"
                android:id="@+id/textView6"
                android:layout_weight="1.2"
                android:gravity="left|center_vertical"
                android:paddingLeft="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Pastor Aleman"
                android:id="@+id/new_detail_breed"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Button"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:visibility="invisible"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/new_detail_description"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>




    </LinearLayout>
    </ScrollView>
</LinearLayout>